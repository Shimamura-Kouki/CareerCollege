-- SELECT * FROM テーブル名;
SELECT  *  FROM  int_1 ;
SELECT  *  FROM  users_1 ;
SELECT  *  FROM  items ;
SELECT  *  FROM  items \G
SELECT  *  FROM  dq3 ;
SELECT  *  FROM  dq3 \G

-- 
SELECT  *  FROM  users_1  WHERE  user_id = 1;
SELECT  *  FROM  users_1  WHERE  age = 20;
SELECT  *  FROM  users_1  WHERE  age = 999;
SELECT  *  FROM  users_1  WHERE  age >= 20;
SELECT  *  FROM  users_1  WHERE  age > 20;
SELECT  *  FROM  users_1  WHERE  age != 20;
SELECT  *  FROM  users_1  WHERE  age <> 20;

SELECT  *  FROM  int_1 ;
SELECT  *  FROM  int_1  ORDER BY num;
SELECT  *  FROM  int_1  ORDER BY num ASC;
SELECT  *  FROM  int_1  ORDER BY num DESC;

SELECT  *  FROM  users_1  WHERE  age > 20  ORDER BY name;

